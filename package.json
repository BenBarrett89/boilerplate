{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate",
  "main": "server/server.js",
  "scripts": {
    "build": "npm run delete-build && npm run copy-client && webpack",
    "copy-client": "babel client/ --copy-files --out-dir build",
    "delete-build": "rimraf build",
    "start": "npm run build && cross-env PORT=8080 node server/server.js",
    "test": "ava --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BenBarrett89/boilerplate.git"
  },
  "author": "Ben Barrett",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BenBarrett89/boilerplate/issues"
  },
  "homepage": "https://github.com/BenBarrett89/boilerplate#readme",
  "dependencies": {
    "body-parser": "^1.16.1",
    "express": "^4.14.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "cross-env": "^3.1.4",
    "redux-devtools-extension": "^2.13.0",
    "rimraf": "^2.6.0",
    "webpack": "^2.2.1"
  },
  "ava": {
   "files": [
     "client/**/*-spec.js",
     "server/**/*-spec.js"
   ],
   "source": [
     "**/*.{js,jsx}"
   ],
   "require": [
     "babel-register"
   ],
   "babel": "inherit"
 }
}
