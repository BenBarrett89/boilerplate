{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate",
  "main": "server/server.js",
  "scripts": {
    "build": "npm run delete-build && npm run copy-client && webpack",
    "check-js": "standard",
    "copy-client": "babel client/ --copy-files --out-dir build",
    "delete-build": "rimraf build",
    "quickstart": "cross-env PORT=8080 node server/server.js",
    "start": "npm run check-js && npm run test && npm run build && cross-env PORT=8080 node server/server.js",
    "test": "npm run test-client && npm run test-server",
    "test-client": "ava --verbose client/**/*-spec.js",
    "test-server": "ava --verbose server/**/*-spec.js",
    "watch-client": "npm run delete-build && npm run copy-client && webpack --watch",
    "watch-server": "cross-env nodemon server/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BenBarrett89/boilerplate.git"
  },
  "author": "Ben Barrett",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BenBarrett89/boilerplate/issues"
  },
  "homepage": "https://github.com/BenBarrett89/boilerplate#readme",
  "dependencies": {
    "axios": "^0.15.3",
    "bluebird": "^3.4.7",
    "body-parser": "^1.16.1",
    "express": "^4.14.1",
    "express-winston": "^2.2.0",
    "mongodb": "^2.2.24",
    "mongoose": "^4.8.4",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-helmet": "^4.0.0",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-saga": "^0.14.3",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2017": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.2",
    "enzyme": "^2.7.1",
    "ignore-styles": "^5.0.1",
    "jsdom": "^9.11.0",
    "mockgoose": "^6.0.8",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "react-addons-test-utils": "^15.4.2",
    "redux-devtools-extension": "^2.13.0",
    "rimraf": "^2.6.0",
    "sass-loader": "^6.0.2",
    "sinon": "^1.17.7",
    "standard": "^8.6.0",
    "style-loader": "^0.13.2",
    "webpack": "^2.2.1"
  },
  "ava": {
    "source": [
      "**/*.{js,jsx}"
    ],
    "require": [
      "babel-polyfill",
      "babel-register",
      "ignore-styles"
    ],
    "babel": "inherit"
  },
  "standard": {
    "ignore": [
      "/test/",
      "/node_modules/",
      "/build/"
    ]
  }
}
